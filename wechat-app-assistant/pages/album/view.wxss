page {
    background:#f2f2f2;
    
}

.photos {
    margin:.5em;
}

.photos .photo {
    background:#FFFFFF;
    margin-bottom:.75em;
    padding:.75em;
}

.photos .photo .desc {
    font-size:1.2em;
    font-weight:normal;
}

.options {
    display: flex;
    flex-direction: row;
    position:fixed;
    height:40px;
    width:100%;
    z-index:999;
    bottom:.5em;
    left:0;
}

.options .item {
    -webkit-box-flex:1;
    display:block;
    color:#FFFFFF;
    margin:0 0 0 0.5em;
    padding:0 1em;
    text-align:center;
    background:#4285f4;
    height:38px;
    border-radius:38px;
    line-height:38px;
}
.options .item text {
    font-size:14px;
}
